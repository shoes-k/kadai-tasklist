<h1>tasklist</h1>

<% if logged_in? %>
  <% if current_user.tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>task</th>
          <th>status</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.tasks.reverse_each do |task| %>
            <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.content %></td>
              <td><%= task.status %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  <%= link_to 'create new task', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>welcome to the tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>



