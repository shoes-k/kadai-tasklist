<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% task.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, 'task' %>
    <%= f.text_field :content %>
  </div>
  
  <div class="form-group">
    <%= f.label :status, 'status' %>
    <%= f.text_field :status %>
  </div>
  
  <%= f.submit 'submit', class: 'btn btn-primary' %>
<% end %>